{
    "name": "capstone-client",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.4.1",
        "@emotion/styled": "^11.3.0",
        "@mui/icons-material": "^5.0.4",
        "@mui/material": "^5.0.4",
        "google-libphonenumber": "^3.2.22",
        "history": "^4.10.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-hook-form": "^7.17.4",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.3",
        "react-table": "^7.7.0",
        "redux-devtools-extension": "^2.13.9",
        "validator": "^13.6.0",
        "web-vitals": "^1.1.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "badges": "istanbul-badges-readme --coverageDir='./coverage'",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom --coverage --reporters=\"jest-html-reporter\" --reporters=\"default\"",
        "test:ci": "CI=true npm test",
        "test:recent": "npm run test:ci -- -o",
        "eject": "react-scripts eject",
        "format": "prettier --write **/*.ts **/*.json *.json",
        "format-check": "prettier --check **/*.ts"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@reduxjs/toolkit": "^1.6.1",
        "@testing-library/dom": "^7.30.3",
        "@testing-library/jest-dom": "^5.11.10",
        "@testing-library/react": "^11.2.6",
        "@testing-library/user-event": "^13.2.1",
        "@types/google-libphonenumber": "^7.4.21",
        "@types/jest": "^26.0.22",
        "@types/node": "^12.20.10",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@types/react-router": "^5.1.16",
        "@types/react-router-dom": "^5.1.8",
        "@types/react-table": "^7.7.7",
        "@types/validator": "^13.6.3",
        "istanbul-badges-readme": "^1.6.0",
        "jest-html-reporter": "^3.4.1",
        "jest-junit": "^13.0.0",
        "prettier": "^2.4.1",
        "sass": "^1.43.4",
        "typescript": "^4.2.4"
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.tsx"
        ],
        "coveragePathIgnorePatterns": [
            "node_modules",
            "test.tsx",
            "__test__"
        ],
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov",
            "clover"
        ]
    }
}
