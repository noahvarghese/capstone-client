{
    "name": "capstone-client",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.8.1",
        "@emotion/styled": "^11.8.1",
        "@mui/icons-material": "^5.4.2",
        "@mui/material": "^5.4.3",
        "draft-js": "^0.11.7",
        "google-libphonenumber": "^3.2.27",
        "history": "^5.3.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-draft-wysiwyg": "^1.14.7",
        "react-hook-form": "^7.27.1",
        "react-router": "^6.2.1",
        "react-router-dom": "^6.2.1",
        "react-scripts": "5.0.0",
        "react-table": "^7.7.0",
        "validator": "^13.7.0",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@mui/x-data-grid": "^5.5.1",
        "@testing-library/dom": "^8.11.3",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.3",
        "@testing-library/user-event": "^13.5.0",
        "@types/draft-js": "^0.11.9",
        "@types/google-libphonenumber": "^7.4.23",
        "@types/jest": "^27.4.1",
        "@types/node": "^16.11.26",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/react-draft-wysiwyg": "^1.13.4",
        "@types/react-router-dom": "^5.3.3",
        "@types/react-table": "^7.7.9",
        "@types/validator": "^13.7.1",
        "istanbul-badges-readme": "^1.8.1",
        "jest-html-reporter": "^3.4.2",
        "jest-junit": "^13.0.0",
        "prettier": "^2.5.1",
        "sass": "^1.49.9",
        "typescript": "^4.5.5"
    },
    "scripts": {
        "start": "react-scripts start",
        "badges": "istanbul-badges-readme --coverageDir='./coverage'",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom --coverage --reporters=\"jest-html-reporter\" --reporters=\"default\"",
        "test:ci": "CI=true npm test",
        "test:recent": "npm run test:ci -- -o",
        "eject": "react-scripts eject",
        "format": "prettier --write **/*.ts **/*.json *.json",
        "format-check": "prettier --check **/*.ts"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.tsx"
        ],
        "coveragePathIgnorePatterns": [
            "node_modules",
            "test.tsx",
            "__test__"
        ],
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov",
            "clover"
        ]
    }
}
